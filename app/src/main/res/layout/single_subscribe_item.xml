<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="20dp"
        app:cardCornerRadius="5dp"
        android:foreground="?attr/selectableItemBackground"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="#ffffff"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="DEPT"
                android:id="@+id/subscribe_dept_name"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30sp"/>
            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/subscribe_spark_button"
                android:layout_width="40dp"
                android:layout_marginRight="20dp"
                android:layout_height="40dp"
                app:sparkbutton_activeImage="@drawable/ic_star_on"
                app:sparkbutton_inActiveImage="@drawable/ic_star_off"
                app:sparkbutton_iconSize="30dp"
                app:sparkbutton_primaryColor="@color/spark_primary_color"
                app:sparkbutton_secondaryColor="@color/spark_secondary_color" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>